@page
@model AuctionOfTangerines.Pages.UserPage

@{
    Layout = "Shared/_Layout";
}

<link rel="stylesheet" href="css/UserForm.css">
<div class="user-form">
    <h2>Информация о пользователе</h2>
    <label for="username">Никнейм:</label>
    <input type="text" id="username" value="@Model.Client?.Username" readonly>

    <label for="email">Почта:</label>
    <input type="email" id="email" value="@Model.Client?.Email" readonly>

    <label for="balance">Баланс:</label>
    <input type="text" id="balance" value="@Model.Client?.Balance" readonly>
    <button type="submit">Пополнить</button>
    <input type="number" id="sum" value="Сумма пополнения">
                                                       
    <label for="balance">Ставки</label>
    <input type="text" value="@Model.Client?.Bets" readonly>
</div>